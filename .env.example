# =============================================================================
# Telegram Mirror Bot Configuration
# =============================================================================

# =============================================================================
# CORE SETTINGS
# =============================================================================
DEBUG=false
ENVIRONMENT=production

# =============================================================================
# TELEGRAM USER CLIENT SETTINGS
# =============================================================================
# Get these from https://my.telegram.org/auth
TELEGRAM__API_ID=12345678
TELEGRAM__API_HASH=your_api_hash_here
TELEGRAM__SESSION_NAME=telegram_mirror

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# SQLite (default)
DATABASE__URL=sqlite+aiosqlite:///./telegram_mirror.db
# PostgreSQL (recommended for production)
# DATABASE__URL=postgresql+asyncpg://user:password@localhost:5432/telegram_mirror
DATABASE__ECHO=false

# =============================================================================
# TELEGRAM BOT SETTINGS (Optional - for future bot integration)
# =============================================================================
# Get bot token from @BotFather
BOT__TOKEN=your_bot_token_here
# BOT__WEBHOOK_URL=https://your-domain.com/webhook
# BOT__WEBHOOK_SECRET_TOKEN=your_webhook_secret

# =============================================================================
# MIRROR CONFIGURATION
# =============================================================================
# Comma-separated list of source chat IDs to mirror FROM
MIRROR__SOURCE_CHAT_IDS=-1001234567890,-1009876543210

# Comma-separated list of target chat IDs to mirror TO  
MIRROR__TARGET_CHAT_IDS=-1001111111111,-1002222222222

# Comma-separated list of admin user IDs (can manage mirrors)
MIRROR__ADMIN_USER_IDS=1266978055,7561878018

# Comma-separated list of allowed user IDs (whose messages will be mirrored)
MIRROR__ALLOWED_USER_IDS=1266978055,6889183661,2351485193

# Image rendering settings
MIRROR__RENDER_IMAGES=true
MIRROR__MAX_IMAGE_WIDTH=800
MIRROR__MAX_IMAGE_HEIGHT=1200

# =============================================================================
# MESSAGE RENDERING SETTINGS
# =============================================================================
RENDER__FONT_FAMILY=Arial
RENDER__FONT_SIZE=14
RENDER__BACKGROUND_COLOR=#FFFFFF
RENDER__TEXT_COLOR=#000000
RENDER__PADDING=20
RENDER__BORDER_RADIUS=10

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOGGING__LEVEL=INFO
LOGGING__FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# LOGGING__FILE_PATH=logs/telegram_mirror.log
LOGGING__MAX_FILE_SIZE=10485760
LOGGING__BACKUP_COUNT=5 